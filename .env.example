# TimeTable Generator Configuration
# Copy this file to .env and adjust the values as needed

# Application Settings
APP_NAME="TimeTable Generator"
APP_VERSION="0.1.0"
DEBUG=false

# Database Settings (for future use)
# DATABASE_URL="sqlite:///timetable.db"

# Scheduling Settings
DEFAULT_SESSION_DURATION=60
DAILY_START_TIME="09:00"
DAILY_END_TIME="17:00"
LUNCH_BREAK_START="12:00"
LUNCH_BREAK_END="13:00"
BREAK_DURATION=15

# Scheduling Constraints
MAX_CONSECUTIVE_HOURS=3
MAX_DAILY_HOURS_PER_TEACHER=8
MAX_WEEKLY_HOURS_PER_TEACHER=40
PREFER_MORNING_SESSIONS=true
AVOID_SINGLE_HOUR_GAPS=true

# File Paths
DATA_DIRECTORY="data"
EXPORT_DIRECTORY="exports"
TEMPLATE_DIRECTORY="templates"

# Logging Settings
LOG_LEVEL="INFO"
LOG_FILE="logs/timetable.log"

# Export Settings
DEFAULT_EXPORT_FORMAT="xlsx"
INCLUDE_METADATA_IN_EXPORT=true

# Validation Settings
STRICT_VALIDATION=true
ALLOW_TEACHER_OVERLOAD=false
ALLOW_CLASSROOM_DOUBLE_BOOKING=false

# Optimization Settings
MAX_SCHEDULING_ATTEMPTS=1000
OPTIMIZATION_ALGORITHM="greedy"
GA_POPULATION=100
GA_GENERATIONS=50